<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "co.uk.no-logo.cyox"
        versionCode = "10"
        version     = "1.0.0" >

    <name>CyOx</name>

    <description>
        CyOx - The Oxford cycling app

    </description>

    <author href="https://www.no-logo.co.uk" email="philip@no-logo.co.uk">
        Philip Gardner
    </author>

    <icon src="icon.png" />


    <feature name="Geolocation">
        <param name="ios-package" value="CDVLocation" />
        <param name="android-package" value="org.apache.cordova.geolocation.GeoBroker" />
    </feature>

    <preference name="permissions" value="android.permission.INTERNET" />
    <preference name="permissions" value="android.permission.ACCESS_NETWORK_STATE" />
    <preference name="permissions" value="android:ACCESS_COARSE_LOCATION" />
    <preference name="permissions" value="android:ACCESS_FINE_LOCATION" />
    <preference name="permissions" value="android:ACCESS_LOCATION_EXTRA_COMMANDS," />

</widget>
